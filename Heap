#include<bits/stdc++.h>
using namespace std;

#define pb push_back
#define mp make_pair
#define mt make_tuple
#define fi first
#define se second
#define ll long long int
#define forn(i, n) for (int i = 0; i < (int)(n); ++i)
#define forn1(i, n) for (int i = 1; i <= (int)(n); ++i)
#define rforn(i, n) for (int i = (int)(n) - 1; i >= 0; --i)
#define bforn(i, a, b) for (int i = (int)(a); i <= (int)(b); ++i)

void heapify(int arr[],int n,int i)
{
    int largest=i;
    int l=2*i+1, r=2*i+2;
    //for max heapify case
    if(l<n && arr[l]>arr[largest]) largest=l;
    if(r<n && arr[r]>arr[largest]) largest=r;
    
    if(largest!=i)
    {
        swap(arr[largest],arr[i]);
        heapify(arr,n,largest); // to heapify effected subtree
    }
    
}


void Build_maxheap(int arr[],int n)
{
    rforn(i,n/2-1) // build heap
    {
        heapify(arr,n,i);
    }
    
    rforn(i,n) // max hepifing
    {
        swap(arr[0],arr[i]);
        heapify(arr,i,0);
    }
    
}


int main() {
	// your code goes here
	int n;
	cin>>n;
	int arr[n];
	forn(i,n) cin>>arr[i];
	Build_maxheap(arr,n);
	
	forn(i,n) cout<<arr[i]<<" ";
	
	return 0;
}

